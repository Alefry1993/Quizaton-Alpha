<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.resultatActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/cardview_dark_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULTAT"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/resultatLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 / 5"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/sumScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sum poeng: 69"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/kommentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Kommentar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/tilbakeQuiz"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:text="Tilbake"
        android:onClick="tilbake"
        android:textColor="@color/black"
        android:textSize="18sp" />
</LinearLayout>